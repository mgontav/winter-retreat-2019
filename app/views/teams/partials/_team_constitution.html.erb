<div class="c-team" style="background-color: <%= team.color1 %>; color: <%= team.color2 %>; font-weight: bold;">
  <section class="c-team__header">
    <h3 class="c-team__position">
      <%= "#{position}#{position.ordinal}" %>
    </h3>
    <h3 class="c-team__title">
      <%= team.name %>
    </h3>
    <% if team.avatar.attached? %>
      <div class="c-team__image" style="background-image: url(<%= url_for(team.avatar) %>);"></div>
    <% end %>
  </section>
  <section class="c-team__body">
    <% team.people.each do |person| %>
      <p class="c-team__member"><%= person.name %></p>
    <% end %>
  </section>
</div>
